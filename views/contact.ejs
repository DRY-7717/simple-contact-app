<h1 class="fw-bold">Daftar Contact</h1>

<div class="row">
  <div class="col-lg-3">
    <a href="/contact/add" class="btn btn-primary">Tambah kontak</a>
  </div>
</div>
<div class="row mt-3">
  <div class="col-lg-8">
    <% if (msg.length != 0) { %>
    <div class="alert alert-success" role="alert"><%= msg %></div>
    <% } %>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nama</th>
          <th scope="col">Email</th>
          <th scope="col">No Hp</th>
          <th scope="col">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% contacts.forEach((contact,i) => { %>
        <tr>
          <th scope="row"><%= i + 1 %></th>
          <td><%= contact.nama %></td>
          <td><%= contact.email %></td>
          <td><%= contact.nohp %></td>
          <td>
            <a
              href="/contact/<%= contact._id %>"
              class="badge text-bg-success rounded-pill px-3 text-decoration-none"
              >detail</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
